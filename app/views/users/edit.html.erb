<div class="container">
	<h2>User info</h2>
	  <% if @user.errors.any? %>
		  <div id="error_explanation">
		    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
		    <ul>
		      <% @user.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>
	<%= form_for(@user) do |f| %>
	    <h4>Name</h4>
	    <%= f.text_field :name %>
	    <h4>Image</h4>
	    <%= f.attachment_field :profile_image %>
	    <h4>introduction</h4>
	    <%= f.text_area :introduction %><br>
	    <%= f.submit 'Update Book' %>
    <% end %>
</div>
