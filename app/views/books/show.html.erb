<% if flash[:notice] %>
   <div class="flash">
     <%= flash[:notice] %>
   </div>
<% end %>
<div class="container"> 
  <div class="row">   
    <div class="col-lg-3">
      <table class="table">
        <h2>User info</h2>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg"  %><br>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>     
        </tbody>
      </table>
      <div class="row">
      <%= link_to edit_user_path(current_user) do %>
        <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
      </div>
    
      <h2>New book</h2>
      <%= form_for(@book) do |book| %>
        <h4>Title</h4>
        <%= book.text_field :title %>

        <h4>Opinion</h4>
        <%= book.text_area :body %><br>

        <%= book.submit'Create Book' %>

        <% end %>
    </div>

    </table>
      <div class="col-lg-9">
      <h2>Book detail</h2>
      <table  class="table table-striped">
        <tbody>
          <tr>
            <th><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg' , fallback: "no-image.jpg" %><br> 
            <%= link_to @book.user.name, user_path(@book.user.id) %>
            </th>
            <th><%= @book.title %></th>
            <th><%= @book.body %></th>
            <th>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book.id) %>
              <% end %>
            </th>
            <th>
              <% if @book.user == current_user %>
                <%= link_to "Dstroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      </div>
  </div>
</div>