<div class="container"> 
  <div class="row">   
    <div class="col-lg-3">
      <table class="table">
        <h2>User info</h2>
        <h2>画像</h2>
        <%= attachment_image_tag @list, :image, :fill, 300, 300, format: 'jpeg' %>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>     
        </tbody>
      </table>
    
      <h2>New book</h2>
      <%= form_for(@book) do |book| %>
        <h4>Title</h4>
        <%= book.text_field :title %>

        <h4>Opinion</h4>
        <%= book.text_area :body %><br>

        <%= book.submit'Create Book' %>

        <% end %>
    </div>

    </table>
      <div class="col-lg-9">
      <h2>Book detail</h2>
      <table  class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opnion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |books| %>
          <tr>
            <th></th>
            <th><%= books.title %></th>
            <th><%= books.body %></th>
            <th><%= link_to "Edit", edit_book_path(books.id) %></th>
            <th><%= link_to "Dstroy", book_path(books.id), method: :delete, "data-confirm" => "Are you sure?" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>