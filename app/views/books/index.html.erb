<div class="container"> 
  <div class="row">   
    <div class="col-lg-3">
      <table class="table">
        <h2>User info</h2>
        <%= attachment_image_tag @list, :image, :fill, 300, 300, format: 'jpeg' , fallback: "no-image.jpg" %>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>     
        </tbody>
      </table>
      <div class="row">
      <%= link_to edit_user_path(current_user) do %>
        <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
      </div>
    
      <h2>New book</h2>
      <%= form_for(@book) do |book| %>
        <h4>Title</h4>
        <%= book.text_field :title %>

        <h4>Opinion</h4>
        <%= book.text_area :body %><br>

        <%= book.submit'Create Book' %>

        <% end %>
    </div>

    </table>
      <div class="col-lg-9">
      <h2>Books</h2>
      <table  class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opnion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |books| %>
          <tr>
            <th></th>
            <th><%= books.title %></th>
            <th><%= books.body %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>